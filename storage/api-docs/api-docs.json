        "/api/threads/{id}": {
            "put": {
                "tags": [
                    "Threads"
                ],
                "summary": "Update a thread",
                "description": "Update a thread by its ID.",
                "operationId": "b2c82963e6af11bdda96544891866d46",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the thread to update",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Thread data to update",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "content"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "New Title"
                                    },
                                    "content": {
                                        "type": "string",
                                        "example": "New Content"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
