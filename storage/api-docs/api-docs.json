{
    "openapi": "3.0.0",
    "info": {
        "title": "Bike Hub Api",
        "version": "0.1"
    },
    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "User Authentication",
                "description": "API endpoint for user authentication. Returns API token upon successful authentication.",
                "operationId": "cdd44c14b1ad1560492fba76b3e0acaf",
                "requestBody": {
                    "description": "User credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "description": "User's email or username",
                                        "type": "string",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "description": "User's password",
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful authentication",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "description": "API token for authenticated user",
                                            "type": "string",
                                            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid credentials"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/logout": {
            "delete": {
                "tags": [
                    "Authentication"
                ],
                "operationId": "dcb3b457df9601e11a18212836a33282",
                "responses": {
                    "200": {
                        "description": "This Api use for The Authenticated User to logout by revoking the current api token"
                    }
                }
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "operationId": "f25eacdab1284e12b28f83cb2b5a30b9",
                "responses": {
                    "200": {
                        "description": "This Api use for user registration"
                    }
                }
            }
        },
        "/api/": {
            "get": {
                "tags": [
                    "Home"
                ],
                "summary": "Get all latest threads with user data",
                "description": "API endpoint to retrieve all latest threads along with associated user data.",
                "operationId": "5672b3cbf24efe31adc956c0557f9aa2",
                "responses": {
                    "200": {
                        "description": "Latest threads with user data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "threads": {
                                            "description": "List of latest threads",
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "thread_id": {
                                                        "description": "ID of the thread",
                                                        "type": "integer",
                                                        "example": "1"
                                                    },
                                                    "thread_title": {
                                                        "description": "Title of the thread",
                                                        "type": "string",
                                                        "example": "Sample Thread Title"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "users": {
                                            "description": "List of users associated with the threads",
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "user_id": {
                                                        "description": "ID of the user",
                                                        "type": "integer",
                                                        "example": "1"
                                                    },
                                                    "username": {
                                                        "description": "Username of the user",
                                                        "type": "string",
                                                        "example": "sample_user"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthorized access. Please provide a valid bearer token."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth ": []
                    }
                ]
            }
        },
        "/api/users/threads/{id}/comment": {
            "post": {
                "tags": [
                    "Threads"
                ],
                "operationId": "e3f38f1e74274475744d33c9f89ab459",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the Thread to retrieve",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Comment content",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "content"
                                ],
                                "properties": {
                                    "content": {
                                        "type": "string",
                                        "example": "This is the comment content."
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "This API is used to add a comment in the specific thread",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Comment added successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/users/threads": {
            "post": {
                "tags": [
                    "Threads"
                ],
                "operationId": "57d2c900f35afbf7bad170bb67df8554",
                "responses": {
                    "200": {
                        "description": "This Api use for Post a new Thread"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Comment",
            "description": "This is related to the threads"
        }
    ]
}